{
    "version": 2,
    "name": "mini-page",
    "builds": [
        {
            "src": "static/**/*.*",
            "use": "@vercel/static"
        },
        {
          "src": "index.js",
          "use": "@vercel/node"
        }
    ],
    
    "rewrites": [{ "source": "/api/(.*)", "destination": "/api" }],

    "env": {
        "SERVER_PORT": "8000"
    }
}